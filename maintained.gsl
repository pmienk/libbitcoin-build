function index_files(files, folder)
    define my.files = index_files.files
    define my.folder = index_files.folder
    define my.directory = open_directory(my.folder)

    for my.directory.directory as _directory by _directory.name
        define my.subfolder = "$(_directory.path)$(_directory.name)"
        
        index_files(my.files, my.subfolder)
    endfor
endfunction # index_files

