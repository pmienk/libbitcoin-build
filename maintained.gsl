.template 0
###############################################################################
# Generation
###############################################################################
function generate_maintained(path_prefix)
    define my.out_file = "MAINTAINED.md.files"
    define my.files_dir = "output"

    new files as _files
    endnew

    notify(my.out_file)
    output(my.out_file)

    write_local_includes(_files, _product, my.base, _repository)

    close
endfunction # generate_maintained
.endtemplate
